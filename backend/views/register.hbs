<section class="register-container">
  <h2 class="form-title">Create an Account</h2>

  {{#if message}}
    <div class="form-message error">{{ message }}</div>
  {{/if}}

  <form method="POST" action="register" class="form">
    <div class="form-group">
      <label for="username">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        required
        class="bg-white text-black text-sm border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-500"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        required
        class="bg-white text-black text-sm border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-500"
      />
    </div>

    <div class="form-group">
      <button
        type="submit"
        class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-4 py-2 rounded shadow-md focus:outline-none focus:ring-2 focus:ring-blue-400 transition">
        Register
      </button>
    </div>
  </form>
</section>
